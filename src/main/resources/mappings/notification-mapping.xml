<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="notificationDAO">
 <resultMap type="NotificationBean" id="notificationResultMap">
 	<id property="notificationId" column="notification_id"/>
    <result property="uid" column="uid"/>
    <result property="message" column="message"/>
    <result property="link" column="link"/>
    <result property="createdAt" column="created_at"/>
    <result property="readYn" column="read_yn"/>
</resultMap>

<insert id="insertNotifications" parameterType="java.util.List">
    INSERT INTO notification (uid, message, link)
    VALUES
    <foreach collection="list" item="noti" separator=",">
        (#{noti.uid}, #{noti.message}, #{noti.link})
    </foreach>
</insert>

<select id="getNotiList" resultMap="notificationResultMap">
        <![CDATA[
        SELECT * FROM notification
        WHERE uid = #{uid}
        ]]>
</select>


</mapper>
